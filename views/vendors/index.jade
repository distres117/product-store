extends ../layout.jade
block body
  form.form-horizontal(action='/vendors', method='POST')
    .form-group
      label.col-sm-2.control-label(for='nameInput') Vendor Name
      .col-sm-8
        input.form-control(type='text', name='name', id='nameInput')
      button.btn.btn-primary(type='submit') Add a vendor
    .form-group
      label.col-sm-2.control-label(for='emailInput') Vendor Email
      .col-sm-8
        input.form-control(type='text', name='email', id='emailInput')
    .form-group
      label.col-sm-2.control-label(for='descInput') Description
      .col-sm-10
        textarea.form-control(rows='3', name='description', id='descInput')
    .form-group
      label.col-sm-2.control-label(for='typeInput') Vendor Type
      .col-sm-6
        select.form-control(name='type', id='typeInput')
            option(value='Home & Office') Home & Office
            option(value='Kitchen') Kitchen
            option(value='Electronics') Electronics
  each vendor,index in vendors
    include ./vendor
        
    
